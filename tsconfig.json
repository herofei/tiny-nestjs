{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noEmit": true,
    "declaration": false,
    "stripInternal": true,
    "skipLibCheck": false,
    "pretty": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "dist",
    "types": ["reflect-metadata"]
  },
  "exclude": ["dist", "node_modules", "test"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
